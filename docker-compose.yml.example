version: '3'
services:
    nginx:
        container_name: docker-nginx
        build: ${NGINX_BUILD}
        volumes:
            - ${NGINX_CONFIG_ROOT}/etc/nginx/nginx.conf:/etc/nginx/nginx.conf
            - ${NGINX_CONFIG_ROOT}/etc/nginx/conf.d:/etc/nginx/conf.d
            - ${NGINX_CONFIG_ROOT}/etc/nginx/sites-available:/etc/nginx/sites-enabled
            - php:/var/www/
        ports:
            - "9090:80"
        restart: always
        depends_on:
            - php 
        networks:
            nginx_mysql_php_network:
                ipv4_address: 172.16.0.2
    php:
        container_name: docker-php
        build: 
            context: .
            dockerfile: ${PHP_BUILD}/Dockerfile
        restart: always
        volumes:
            - php:/var/www/     
            - ${PHP_FPM_CONFIG_ROOT}/usr/local/etc/php-fpm.d/www.conf:/usr/local/etc/php-fpm.d/www.conf
        networks:
            nginx_mysql_php_network:
                ipv4_address: 172.16.0.3
    mysql:
        container_name: docker-mysql
        image: mysql:5.7
        environment:
            MYSQL_ROOT_PASSWORD: root
        restart: always
        volumes:
            - ${MYSQL_DATABASE_PATH}:/var/lib/mysql
        ports:
            - "3366:3306"
        networks:
            nginx_mysql_php_network:
                ipv4_address: 172.16.0.4
    mysql8:
        container_name: docker-mysql8
        image: mysql:8.0
        environment:
            MYSQL_ROOT_PASSWORD: root
        restart: always
        volumes:
            - mysql8_databases:/var/lib/mysql
        ports:
            - "3367:3306"
        networks:
            nginx_mysql_php_network:
                ipv4_address: 172.16.0.5
    mariadb10:
        image: mariadb:10.11.9
        container_name: docker-mariadb10
        restart: always
        environment:
            MYSQL_ROOT_PASSWORD: root
        ports:
            - "3466:3306"
        volumes:
            - mariadb10_databases:/var/lib/mysql
        
        networks:
            nginx_mysql_php_network:
                ipv4_address: 172.16.0.6
    go:
        container_name: docker-go
        build: 
            context: .
            dockerfile: ${GO_BUILD}/Dockerfile
        restart: always
        ports:
            - "9091:8080"
        volumes:
            - go:/app
        networks:
            nginx_mysql_php_network:
                ipv4_address: 172.16.0.7
    nodejs:
        container_name: docker-nodejs
        build: 
            context: .
            dockerfile: ${NODEJS_BUILD}/Dockerfile
        restart: always
        volumes:
            - node:/projects
        ports:
            - "3000-3010:3000-3010" # Optional, expose ports for projects
        extra_hosts:
            - "landlord.laravelsimklinik.id:172.16.0.2"
        stdin_open: true
        tty: true
        networks:
            nginx_mysql_php_network:
                ipv4_address: 172.16.0.8
    postgres17:
        image: postgres:17.4
        container_name: docker-postgres17
        restart: always
        environment:
            POSTGRES_USER: root
            POSTGRES_PASSWORD : root
        ports:
            - "5432:5432"
        volumes:
            - postgres17_databases:/var/lib/postgresql/data        
        networks:
            nginx_mysql_php_network:
                ipv4_address: 172.16.0.9
    openlitespeed:
        build: 
            context: .
            dockerfile: ${LITESPEED_BUILD}/Dockerfile
        container_name: docker-openlitespeed
        # restart: always
        ports:
            - "8089:8089"  # App LiteSpeed Web Server
            - "8088:8088"  # LiteSpeed Web Server
            - "7080:7080"  # LiteSpeed Admin Panel
            - "443:443"    # HTTPS (if needed)
        volumes:
            # - ./litespeed_data:/usr/local/lsws
            # - ./litespeed_logs:/usr/local/lsws/logs            - 
            - ${LITESPEED_CONFIG_ROOT}/usr/local/lsws/conf/httpd_config.conf:/usr/local/lsws/conf/httpd_config.conf
            - ${LITESPEED_CONFIG_ROOT}/usr/local/lsws/conf/vhosts/Laravelsimklinik:/usr/local/lsws/conf/vhosts/Laravelsimklinik
            # - ${LITESPEED_BUILD}/entrypoint.sh:/entrypoint.sh  # Mount custom script
            - php:/var/www/     
        environment:
            - WEBADMIN_USER=admin
            - WEBADMIN_PASS=admin54321       
        networks:
            nginx_mysql_php_network:
                ipv4_address: 172.16.0.10
    mariadb10-master:
        build: ${MARIADB10_MASTER_BUILD}
        container_name: docker-mariadb10-master
        restart: always
        environment:
            MYSQL_ROOT_PASSWORD: root
        ports:
            - "3566:3306"
        volumes:
            - mariadb10_master_databases:/var/lib/mysql
        networks:
            nginx_mysql_php_network:
                ipv4_address: 172.16.0.11
    mariadb10-slave:
        build: ${MARIADB10_SLAVE_BUILD}
        container_name: docker-mariadb10-slave
        restart: always
        environment:
            MYSQL_ROOT_PASSWORD: root
        ports:
            - "3666:3306"
        volumes:
            - mariadb10_slave_databases:/var/lib/mysql 
        networks:
            nginx_mysql_php_network:
                ipv4_address: 172.16.0.12
    nodejs-prodlike:
        container_name: docker-nodejs-prodlike
        build: 
            context: .
            dockerfile: ${NODEJS_PRODLIKE_BUILD}/Dockerfile
        restart: always
        volumes:
            - node:/projects
        ports:
            - "3011-3020:3011-3020" # Optional, expose ports for projects
        stdin_open: true
        tty: true
        networks:
            nginx_mysql_php_network:
                ipv4_address: 172.16.0.13    
    portainer:
        image: portainer/portainer-ce:lts
        container_name: docker-portainer
        restart: always
        ports:
            - "8000:8000"
            - "9000:9000"
            - "9443:9443"
        volumes:
            - /var/run/docker.sock:/var/run/docker.sock 
            - portainer:/data   
        networks:
            nginx_mysql_php_network:
                ipv4_address: 172.16.0.14
    java:        
        container_name: docker-java
        build:
            context: .
            dockerfile: ${AMAZON_CORRETO_BUILD}/Dockerfile
        restart: always
        ports:
            - "8081:8089"
        volumes:
            - java:/var/www
        networks:
            nginx_mysql_php_network:
                ipv4_address: 172.16.0.15
    minio:
        image: quay.io/minio/minio:latest
        container_name: docker-minio
        restart: always
        ports:
            - "9011:9000"  # API
            - "9010:9001"  # Console
        environment:
            MINIO_ROOT_USER: admin
            MINIO_ROOT_PASSWORD: password123
        volumes:
            - minio:/data
        command: server /data --console-address ":9001"
        networks:
            nginx_mysql_php_network:
                ipv4_address: 172.16.0.16

volumes:
    java:
    node:
    php:
    php_litespeed:
    mariadb10_databases:
    mariadb10_master_databases:
    mariadb10_slave_databases:
    minio:
    portainer:
    postgres17_databases:
    go:
    mysql8_databases:

networks:
  nginx_mysql_php_network:
    driver: bridge
    ipam:
      config:
        - subnet: 172.16.0.0/24